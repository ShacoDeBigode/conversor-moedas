{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@angular/*": ["node_modules/@angular/*"]
    },
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true, // Habilita o suporte a decorators
    "emitDecoratorMetadata": true // Opcional, mas Ãºtil para metadados
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
